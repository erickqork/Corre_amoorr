  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Corre mi princesa üêæ</title>
  <style>
    html, body {
      margin: 0;
      padding: 0;
      background: linear-gradient(to top, #ffe0e9, #fff0f5);
      overflow: hidden;
      font-family: 'Arial', sans-serif;
    }
    canvas {
      display: block;
      margin: 0 auto;
      background-color: #ffccdd;
    }
    #message {
      position: absolute;
      top: 40%;
      left: 50%;
      transform: translate(-50%, -50%);
      background: #fff0f5;
      padding: 20px 30px;
      border-radius: 15px;
      box-shadow: 0 4px 8px rgba(0,0,0,0.2);
      font-size: 1.2em;
      color: #333;
      text-align: center;
      display: none;
      z-index: 3;
    }
    #play {
      margin-top: 15px;
      padding: 10px 20px;
      background: #ff6fa5;
      color: white;
      border: none;
      border-radius: 10px;
      cursor: pointer;
      font-size: 1em;
    }
  </style>
